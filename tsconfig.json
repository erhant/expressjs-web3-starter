{
  "extends": "./node_modules/gts/tsconfig-google.json",
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./build",
    "esModuleInterop": true,
    "strict": true,
    "lib": ["esnext"], 
    "target": "ES2020",
    "typeRoots": ["./@types", "./node_modules/@types"], 
    "isolatedModules": true
  },
  "exclude": [
    "node_modules",
    "build",
    "scripts"
  ],
  "include": [
    "src/**/*.ts", 
  ],
}
